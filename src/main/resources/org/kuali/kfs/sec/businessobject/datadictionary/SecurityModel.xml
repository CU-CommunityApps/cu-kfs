<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="SecurityModel" parent="SecurityModel-parentBean"/>
    <bean id="SecurityModel-parentBean" abstract="true" parent="BusinessObjectEntry"
          p:businessObjectClass="org.kuali.kfs.sec.businessobject.SecurityModel"
          p:inquiryDefinition-ref="SecurityModel-inquiryDefinition"
          p:lookupDefinition-ref="SecurityModel-lookupDefinition" p:titleAttribute="id"
          p:objectLabel="Security Model" p:businessObjectAdminService-ref="defaultBoAdminService"
          p:name="SecurityModel">
        <property name="attributes">
            <list>
                <ref bean="SecurityModel-id"/>
                <ref bean="SecurityModel-name"/>
                <ref bean="SecurityModel-description"/>
                <ref bean="SecurityModel-active"/>
            </list>
        </property>
    </bean>

    <!-- Attribute Definitions -->

    <bean id="SecurityModel-id" parent="SecurityModel-id-parentBean"/>
    <bean id="SecurityModel-id-parentBean" abstract="true" parent="AttributeDefinition" p:name="id"
          p:forceUppercase="false" p:label="Model Id" p:shortLabel="Id" p:maxLength="10" p:required="true">
        <property name="control">
            <bean parent="TextControlDefinition" p:size="10"/>
        </property>
    </bean>

    <bean id="SecurityModel-name" parent="SecurityModel-name-parentBean"/>
    <bean id="SecurityModel-name-parentBean" abstract="true" parent="AttributeDefinition" p:name="name"
          p:forceUppercase="false" p:label="Model Name" p:shortLabel="Name" p:maxLength="100" p:required="true">
        <property name="validationPattern">
            <bean parent="AnyCharacterValidationPattern" p:allowWhitespace="true"/>
        </property>
        <property name="control">
            <bean parent="TextControlDefinition" p:size="40"/>
        </property>
    </bean>

    <bean id="SecurityModel-description" parent="SecurityModel-description-parentBean"/>
    <bean id="SecurityModel-description-parentBean" abstract="true" parent="AttributeDefinition" p:name="description"
          p:forceUppercase="false" p:label="Model Description" p:shortLabel="Desc" p:maxLength="400"
          p:required="false">
        <property name="validationPattern">
            <bean parent="AnyCharacterValidationPattern" p:allowWhitespace="true"/>
        </property>
        <property name="control">
            <bean parent="TextControlDefinition" p:size="100"/>
        </property>
    </bean>

    <bean id="SecurityModel-active" parent="SecurityModel-active-parentBean"/>
    <bean id="SecurityModel-active-parentBean" abstract="true" parent="GenericAttributes-activeIndicator"
          p:name="active" p:shortLabel="Active"/>

    <!-- Business Object Inquiry Definition -->

    <bean id="SecurityModel-inquiryDefinition" parent="SecurityModel-inquiryDefinition-parentBean"/>
    <bean id="SecurityModel-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition"
          p:title="Security Model Inquiry">
        <property name="inquirySections">
            <list>
                <ref bean="SecurityModel-inquirySectionDefinition-model"/>
                <ref bean="SecurityModel-inquirySectionDefinition-modelDefinition"/>
                <ref bean="SecurityModel-inquirySectionDefinition-modelMembers"/>
            </list>
        </property>
    </bean>

    <bean id="SecurityModel-inquirySectionDefinition-model"
          parent="SecurityModel-inquirySectionDefinition-model-parentBean"/>
    <bean id="SecurityModel-inquirySectionDefinition-model-parentBean" parent="InquirySectionDefinition"
          abstract="true" p:title="Model" p:numberOfColumns="1">
        <property name="inquiryFields">
            <list>
                <bean parent="FieldDefinition" p:attributeName="id"/>
                <bean parent="FieldDefinition" p:attributeName="name"/>
                <bean parent="FieldDefinition" p:attributeName="description"/>
                <bean parent="FieldDefinition" p:attributeName="active"/>
            </list>
        </property>
    </bean>

    <bean id="SecurityModel-inquirySectionDefinition-modelDefinition"
          parent="SecurityModel-inquirySectionDefinition-modelDefinition-parentBean"/>
    <bean id="SecurityModel-inquirySectionDefinition-modelDefinition-parentBean" parent="InquirySectionDefinition"
          abstract="true" p:title="Model Definitions">
        <property name="inquiryFields">
            <list>
                <ref bean="SecurityModel-inquiryCollectionDefinition-modelDefinition"/>
            </list>
        </property>
    </bean>

    <bean id="SecurityModel-inquiryCollectionDefinition-modelDefinition"
          parent="SecurityModel-inquiryCollectionDefinition-modelDefinition-parentBean"/>
    <bean id="SecurityModel-inquiryCollectionDefinition-modelDefinition-parentBean"
          parent="InquiryCollectionDefinition" p:attributeName="modelDefinitions" abstract="true"
          p:businessObjectClass="org.kuali.kfs.sec.businessobject.SecurityModelDefinition">
        <property name="inquiryFields">
            <list>
                <bean parent="FieldDefinition" p:attributeName="securityDefinition.name"/>
                <bean parent="FieldDefinition" p:attributeName="constraintCode"/>
                <bean parent="FieldDefinition" p:attributeName="operatorCode"/>
                <bean parent="FieldDefinition" p:attributeName="attributeValue"/>
                <bean parent="FieldDefinition" p:attributeName="overrideDeny"/>
                <bean parent="FieldDefinition" p:attributeName="active"/>
            </list>
        </property>
    </bean>

    <bean id="SecurityModel-inquirySectionDefinition-modelMembers"
          parent="SecurityModel-inquirySectionDefinition-modelMembers-parentBean"/>
    <bean id="SecurityModel-inquirySectionDefinition-modelMembers-parentBean" parent="InquirySectionDefinition"
          abstract="true" p:title="Model Members">
        <property name="inquiryFields">
            <list>
                <ref bean="SecurityModel-inquiryCollectionDefinition-modelMembers"/>
            </list>
        </property>
    </bean>

    <bean id="SecurityModel-inquiryCollectionDefinition-modelMembers"
          parent="SecurityModel-inquiryCollectionDefinition-modelMembers-parentBean"/>
    <bean id="SecurityModel-inquiryCollectionDefinition-modelMembers-parentBean" parent="InquiryCollectionDefinition"
          p:attributeName="modelMembers" abstract="true"
          p:businessObjectClass="org.kuali.kfs.sec.businessobject.SecurityModelMember">
        <property name="inquiryFields">
            <list>
                <bean parent="FieldDefinition" p:attributeName="memberTypeCode"/>
                <bean parent="FieldDefinition" p:attributeName="memberId"/>
                <bean parent="FieldDefinition" p:attributeName="memberName"/>
                <bean parent="FieldDefinition" p:attributeName="activeFromDate"/>
                <bean parent="FieldDefinition" p:attributeName="activeToDate"/>
            </list>
        </property>
    </bean>

    <!-- Business Object Lookup Definition -->

    <bean id="SecurityModel-lookupDefinition" parent="SecurityModel-lookupDefinition-parentBean"/>
    <bean id="SecurityModel-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition"
          p:title="Security Model Lookup" p:lookupSearchService-ref="defaultLookupSearchService">
        <property name="defaultSort">
            <bean parent="SortDefinition" p:sortAscending="true">
                <property name="attributeNames">
                    <list>
                        <value>name</value>
                    </list>
                </property>
            </bean>
        </property>
        <property name="lookupAttributeDefinitions">
            <list>
                <bean class="org.kuali.kfs.krad.datadictionary.LookupAttributeDefinition"
                      parent="SecurityModel-name"/>
                <bean class="org.kuali.kfs.krad.datadictionary.LookupAttributeDefinition"
                      parent="SecurityModel-active"
                      p:control-ref="GenericAttributes-genericBooleanYNBoth-lookupControl" p:defaultValue="Y"/>
            </list>
        </property>
        <property name="lookupResultAttributeDefinitions">
            <list>
                <bean class="org.kuali.kfs.krad.datadictionary.LookupResultAttributeDefinition"
                      parent="SecurityModel-id"/>
                <bean class="org.kuali.kfs.krad.datadictionary.LookupResultAttributeDefinition"
                      parent="SecurityModel-name"/>
                <bean class="org.kuali.kfs.krad.datadictionary.LookupResultAttributeDefinition"
                      parent="SecurityModel-description"/>
                <bean class="org.kuali.kfs.krad.datadictionary.LookupResultAttributeDefinition"
                      parent="SecurityModel-active"/>
            </list>
        </property>
        <property name="lookupFields">
            <list>
                <bean parent="FieldDefinition" p:attributeName="name"/>
                <bean parent="FieldDefinition" p:attributeName="active"/>
            </list>
        </property>
        <property name="resultFields">
            <list>
                <bean parent="FieldDefinition" p:attributeName="id"/>
                <bean parent="FieldDefinition" p:attributeName="name"/>
                <bean parent="FieldDefinition" p:attributeName="description"/>
                <bean parent="FieldDefinition" p:attributeName="active"/>
            </list>
        </property>
    </bean>
</beans>
