<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="InternalBilling-saveDocumentValidation-parentBean" parent="CompositeValidation" scope="prototype" abstract="true">
        <property name="validations">
            <list>
                <bean parent="AccountingDocument-SaveDocument-DefaultValidation" scope="prototype"/>
                <bean parent="InternalBilling-totalAmountBelowThresholdValidation" scope="prototype">
                    <property name="parameterProperties">
                        <list>
                            <bean parent="accountingDocumentFieldConversion"/>
                        </list>
                    </property>
                    <property name="quitOnFail" value="false"/>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="InternalBilling-totalAmountBelowThresholdValidation" class="edu.cornell.kfs.fp.document.validation.impl.TotalAmountBelowThresholdValidation" abstract="true"/>

</beans>
