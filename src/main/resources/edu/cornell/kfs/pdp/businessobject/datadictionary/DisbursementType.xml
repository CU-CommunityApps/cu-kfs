<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="DisbursementType" parent="DisbursementType-parentBean"/>
    <bean id="DisbursementType-parentBean" abstract="true" parent="BusinessObjectEntry"
          p:businessObjectClass="org.kuali.kfs.pdp.businessobject.DisbursementType"
          p:inquiryDefinition-ref="DisbursementType-inquiryDefinition"
          p:businessObjectAdminService-ref="defaultBoAdminService" p:name="DisbursementType"
          p:lookupDefinition-ref="DisbursementType-lookupDefinition" p:objectLabel="Disbursement Type">
        <property name="attributes">
            <list>
                <ref bean="DisbursementType-code"/>
                <ref bean="DisbursementType-name"/>
            </list>
        </property>
    </bean>

    <!-- Attribute Definitions -->

    <bean id="DisbursementType-code" parent="DisbursementType-code-parentBean"/>
    <bean id="DisbursementType-code-parentBean" abstract="true" parent="AttributeDefinition" p:name="code"
          p:forceUppercase="true" p:label="Disbursement Type Code" p:shortLabel="Disbursement Type" p:maxLength="4"
          p:validationPattern-ref="AlphaNumericValidation" p:required="true">
        <property name="control">
            <bean parent="SelectControlDefinition" p:valuesFinder-ref="disbursementTypeValuesFinder"
                  p:includeKeyInLabel="false"/>
        </property>
    </bean>

    <bean id="DisbursementType-name" parent="DisbursementType-name-parentBean"/>
    <bean id="DisbursementType-name-parentBean" abstract="true" parent="AttributeDefinition" p:name="name"
          p:label="Disbursement Type Name" p:shortLabel="Name" p:maxLength="25" p:required="true">
        <property name="control">
            <bean parent="TextControlDefinition" p:size="25"/>
        </property>
    </bean>

    <!-- Business Object Inquiry Definition -->

    <bean id="DisbursementType-inquiryDefinition" parent="DisbursementType-inquiryDefinition-parentBean"/>
    <bean id="DisbursementType-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition"
          p:title="Disbursement Type Inquiry">
        <property name="inquirySections">
            <list>
                <ref bean="DisbursementType-inquirySectionDefinition"/>
            </list>
        </property>
    </bean>

    <bean id="DisbursementType-inquirySectionDefinition"
          parent="DisbursementType-inquirySectionDefinition-parentBean"/>
    <bean id="DisbursementType-inquirySectionDefinition-parentBean" parent="InquirySectionDefinition" abstract="true"
          p:title="" p:numberOfColumns="1">
        <property name="inquiryFields">
            <list>
                <bean parent="FieldDefinition" p:attributeName="code"/>
                <bean parent="FieldDefinition" p:attributeName="name"/>
            </list>
        </property>
    </bean>

    <!-- Business Object Lookup Definition -->

    <bean id="DisbursementType-lookupDefinition" parent="DisbursementType-lookupDefinition-parentBean"/>
    <bean id="DisbursementType-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition"
          p:title="Disbursement Type Lookup" p:lookupSearchService-ref="defaultLookupSearchService">
        <property name="defaultSort">
            <bean parent="SortDefinition">
                <property name="attributeNames">
                    <list>
                        <value>code</value>
                    </list>
                </property>
            </bean>
        </property>
        <property name="lookupAttributeDefinitions">
            <list>
                <bean class="org.kuali.kfs.krad.datadictionary.LookupAttributeDefinition"
                      parent="DisbursementType-code"/>
                <bean class="org.kuali.kfs.krad.datadictionary.LookupAttributeDefinition"
                      parent="DisbursementType-name"/>
            </list>
        </property>
        <property name="lookupResultAttributeDefinitions">
            <list>
                <bean class="org.kuali.kfs.krad.datadictionary.LookupResultAttributeDefinition"
                      parent="DisbursementType-code"/>
                <bean class="org.kuali.kfs.krad.datadictionary.LookupResultAttributeDefinition"
                      parent="DisbursementType-name"/>
            </list>
        </property>
        <property name="lookupFields">
            <list>
                <bean parent="FieldDefinition" p:attributeName="code"/>
                <bean parent="FieldDefinition" p:attributeName="name"/>
            </list>
        </property>
        <property name="resultFields">
            <list>
                <bean parent="FieldDefinition" p:attributeName="code"/>
                <bean parent="FieldDefinition" p:attributeName="name"/>
            </list>
        </property>
    </bean>

    <bean id="disbursementTypeValuesFinder"
          class="org.kuali.kfs.pdp.businessobject.options.DisbursementTypeValuesFinder"/>
</beans>
