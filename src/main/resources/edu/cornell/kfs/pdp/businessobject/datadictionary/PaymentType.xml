<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="PaymentType" parent="PaymentType-parentBean"/>
    <bean id="PaymentType-parentBean" abstract="true" parent="BusinessObjectEntry"
          p:businessObjectClass="org.kuali.kfs.pdp.businessobject.PaymentType"
          p:inquiryDefinition-ref="PaymentType-inquiryDefinition"
          p:businessObjectAdminService-ref="defaultBoAdminService" p:name="PaymentType"
          p:lookupDefinition-ref="PaymentType-lookupDefinition" p:objectLabel="Payment Type">
        <property name="attributes">
            <list>
                <ref bean="PaymentType-code"/>
                <ref bean="PaymentType-name"/>
            </list>
        </property>
    </bean>

    <!-- Attribute Definitions -->

    <bean id="PaymentType-code" parent="PaymentType-code-parentBean"/>
    <bean id="PaymentType-code-parentBean" abstract="true" parent="AttributeDefinition" p:name="code"
          p:forceUppercase="true" p:label="Payment Type Code" p:shortLabel="Payment Type Code" p:maxLength="100"
          p:required="true">
        <property name="control">
            <bean parent="TextControlDefinition" p:size="50"/>
        </property>
    </bean>

    <bean id="PaymentType-name" parent="PaymentType-name-parentBean"/>
    <bean id="PaymentType-name-parentBean" abstract="true" parent="AttributeDefinition" p:name="name"
          p:label="Payment Type Description" p:shortLabel="Payment Type Description" p:maxLength="200"
          p:required="true" p:control-ref="StandardNameTextControl"/>

    <!-- Business Object Inquiry Definition -->

    <bean id="PaymentType-inquiryDefinition" parent="PaymentType-inquiryDefinition-parentBean"/>
    <bean id="PaymentType-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition"
          p:title="PaymentType Inquiry">
        <property name="inquirySections">
            <list>
                <ref bean="PaymentType-inquirySectionDefinition"/>
            </list>
        </property>
    </bean>

    <bean id="PaymentType-inquirySectionDefinition" parent="PaymentType-inquirySectionDefinition-parentBean"/>
    <bean id="PaymentType-inquirySectionDefinition-parentBean" parent="InquirySectionDefinition" abstract="true"
          p:title="" p:numberOfColumns="1">
        <property name="inquiryFields">
            <list>
                <bean parent="FieldDefinition" p:attributeName="code"/>
                <bean parent="FieldDefinition" p:attributeName="name"/>
            </list>
        </property>
    </bean>

    <!-- Business Object Lookup Definition -->

    <bean id="PaymentType-lookupDefinition" parent="PaymentType-lookupDefinition-parentBean"/>
    <bean id="PaymentType-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition"
          p:title="Payment Type Lookup" p:lookupSearchService-ref="defaultLookupSearchService">
        <property name="defaultSort">
            <bean parent="SortDefinition">
                <property name="attributeNames">
                    <list>
                        <value>code</value>
                    </list>
                </property>
            </bean>
        </property>
        <property name="lookupAttributeDefinitions">
            <list>
                <bean class="org.kuali.kfs.krad.datadictionary.LookupAttributeDefinition" parent="PaymentType-code"/>
                <bean class="org.kuali.kfs.krad.datadictionary.LookupAttributeDefinition" parent="PaymentType-name"/>
            </list>
        </property>
        <property name="lookupResultAttributeDefinitions">
            <list>
                <bean class="org.kuali.kfs.krad.datadictionary.LookupResultAttributeDefinition"
                      parent="PaymentType-code"/>
                <bean class="org.kuali.kfs.krad.datadictionary.LookupResultAttributeDefinition"
                      parent="PaymentType-name"/>
            </list>
        </property>
        <property name="lookupFields">
            <list>
                <bean parent="FieldDefinition" p:attributeName="code"/>
                <bean parent="FieldDefinition" p:attributeName="name"/>
            </list>
        </property>
        <property name="resultFields">
            <list>
                <bean parent="FieldDefinition" p:attributeName="code"/>
                <bean parent="FieldDefinition" p:attributeName="name"/>
            </list>
        </property>
    </bean>
</beans>
