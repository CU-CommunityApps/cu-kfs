<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="PaymentChangeCode" parent="PaymentChangeCode-parentBean"/>
    <bean id="PaymentChangeCode-parentBean" abstract="true" parent="BusinessObjectEntry"
          p:businessObjectClass="org.kuali.kfs.pdp.businessobject.PaymentChangeCode"
          p:inquiryDefinition-ref="PaymentChangeCode-inquiryDefinition"
          p:businessObjectAdminService-ref="defaultBoAdminService" p:name="PaymentChangeCode"
          p:lookupDefinition-ref="PaymentChangeCode-lookupDefinition" p:objectLabel="Payment Change">
        <property name="attributes">
            <list>
                <ref bean="PaymentChangeCode-code"/>
                <ref bean="PaymentChangeCode-name"/>
            </list>
        </property>
    </bean>

    <!-- Attribute Definitions -->

    <bean id="PaymentChangeCode-code" parent="PaymentChangeCode-code-parentBean"/>
    <bean id="PaymentChangeCode-code-parentBean" abstract="true" parent="AttributeDefinition" p:name="code"
          p:forceUppercase="true" p:label="Payment Change Code" p:shortLabel="Payment Change" p:maxLength="4"
          p:validationPattern-ref="AlphaNumericValidation" p:required="true"
          p:control-ref="FourCharacterTextControl"/>

    <bean id="PaymentChangeCode-name" parent="PaymentChangeCode-name-parentBean"/>
    <bean id="PaymentChangeCode-name-parentBean" abstract="true" parent="AttributeDefinition" p:name="name"
          p:label="Payment Change Name" p:shortLabel="Name" p:maxLength="25" p:required="true">
        <property name="control">
            <bean parent="TextControlDefinition" p:size="25"/>
        </property>
    </bean>

    <!-- Business Object Inquiry Definition -->

    <bean id="PaymentChangeCode-inquiryDefinition" parent="PaymentChangeCode-inquiryDefinition-parentBean"/>
    <bean id="PaymentChangeCode-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition"
          p:title="Payment Change Code Inquiry">
        <property name="inquirySections">
            <list>
                <ref bean="PaymentChangeCode-inquirySectionDefinition"/>
            </list>
        </property>
    </bean>

    <bean id="PaymentChangeCode-inquirySectionDefinition"
          parent="PaymentChangeCode-inquirySectionDefinition-parentBean"/>
    <bean id="PaymentChangeCode-inquirySectionDefinition-parentBean" parent="InquirySectionDefinition"
          abstract="true" p:title="" p:numberOfColumns="1">
        <property name="inquiryFields">
            <list>
                <bean parent="FieldDefinition" p:attributeName="code"/>
                <bean parent="FieldDefinition" p:attributeName="name"/>
            </list>
        </property>
    </bean>

    <!-- Business Object Lookup Definition -->

    <bean id="PaymentChangeCode-lookupDefinition" parent="PaymentChangeCode-lookupDefinition-parentBean"/>
    <bean id="PaymentChangeCode-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition"
          p:title="Payment Change Code Lookup" p:lookupSearchService-ref="defaultLookupSearchService">
        <property name="defaultSort">
            <bean parent="SortDefinition">
                <property name="attributeNames">
                    <list>
                        <value>code</value>
                    </list>
                </property>
            </bean>
        </property>
        <property name="lookupAttributeDefinitions">
            <list>
                <bean class="org.kuali.kfs.krad.datadictionary.LookupAttributeDefinition"
                      parent="PaymentChangeCode-code"/>
                <bean class="org.kuali.kfs.krad.datadictionary.LookupAttributeDefinition"
                      parent="PaymentChangeCode-name"/>
            </list>
        </property>
        <property name="lookupResultAttributeDefinitions">
            <list>
                <bean class="org.kuali.kfs.krad.datadictionary.LookupResultAttributeDefinition"
                      parent="PaymentChangeCode-code"/>
                <bean class="org.kuali.kfs.krad.datadictionary.LookupResultAttributeDefinition"
                      parent="PaymentChangeCode-name"/>
            </list>
        </property>
        <property name="lookupFields">
            <list>
                <bean parent="FieldDefinition" p:attributeName="code"/>
                <bean parent="FieldDefinition" p:attributeName="name"/>
            </list>
        </property>
        <property name="resultFields">
            <list>
                <bean parent="FieldDefinition" p:attributeName="code"/>
                <bean parent="FieldDefinition" p:attributeName="name"/>
            </list>
        </property>
    </bean>
</beans>
