<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

<bean id="cgModuleConfiguration" parent="cgModuleConfiguration-parentBean">
		<property name="packagePrefixes">
            <list merge="true">
                <value>edu.cornell.kfs.module.cg</value>
            </list>
        </property>
		<property name="dataDictionaryPackages">
			<list merge="true">
                <value>classpath:edu/cornell/kfs/module/cg/document/datadictionary/*.xml</value>
                <value>classpath:edu/cornell/kfs/module/cg/businessobject/datadictionary/*.xml</value>
			</list>
		</property>
		<property name="databaseRepositoryFilePaths">
			<list merge="true">
				<value>edu/cornell/kfs/module/cg/cu-ojb-cg.xml</value>
			</list>
		</property>
		<property name="externalizableBusinessObjectImplementations">
            <map merge="true">
                <entry key="org.kuali.kfs.integration.cg.ContractsAndGrantsAward" value="edu.cornell.kfs.module.cg.businessobject.CuAward" />
				<entry key="org.kuali.kfs.integration.cg.ContractsAndGrantsBillingAward" value="edu.cornell.kfs.module.cg.businessobject.CuAward" />
				<entry key="org.kuali.kfs.module.cg.businessobject.Award" value="edu.cornell.kfs.module.cg.businessobject.CuAward" />
			</map>
        </property>
	</bean>

	<bean id="awardAccountDao" parent="platformAwareDao"  class="edu.cornell.kfs.module.cg.dataaccess.impl.AwardAccountDaoOjb" />
	
	<bean id="cuAwardAccountService" class="edu.cornell.kfs.module.cg.service.impl.CuAwardAccountServiceImpl">
		<property name="awardAccountDao" ref="awardAccountDao"/>
	</bean>
	
	<bean id="awardLookupableHelperService-parentBean" abstract="true" class="edu.cornell.kfs.module.cg.businessobject.lookup.CuAwardLookupableHelperServiceImpl" 
		scope="prototype" parent="cf.lookupableHelperService">
        <property name="accountsReceivableModuleBillingService">
            <ref bean="accountsReceivableModuleBillingService"/>
        </property>
        <property name="contractsAndGrantsLookupService">
            <ref bean="contractsAndGrantsLookupService"/>
        </property>
    </bean>

</beans>