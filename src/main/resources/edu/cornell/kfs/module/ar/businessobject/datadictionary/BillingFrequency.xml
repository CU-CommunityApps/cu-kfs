<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="BillingFrequency" parent="BillingFrequency-parentBean"/>
    <bean id="BillingFrequency-parentBean" abstract="true" parent="BusinessObjectEntry"
          p:businessObjectClass="org.kuali.kfs.module.ar.businessobject.BillingFrequency"
          p:inquiryDefinition-ref="BillingFrequency-inquiryDefinition"
          p:businessObjectAdminService-ref="defaultBoAdminService" p:name="BillingFrequency"
          p:lookupDefinition-ref="BillingFrequency-lookupDefinition" p:titleAttribute="frequency"
          p:objectLabel="Frequency">
        <property name="attributes">
            <list>
                <ref bean="BillingFrequency-frequency"/>
                <ref bean="BillingFrequency-frequencyDescription"/>
                <ref bean="BillingFrequency-gracePeriodDays"/>
                <ref bean="BillingFrequency-active"/>
            </list>
        </property>
    </bean>

    <!-- Attribute Definitions -->

    <bean id="BillingFrequency-frequency" parent="BillingFrequency-frequency-parentBean"/>
    <bean id="BillingFrequency-frequency-parentBean" abstract="true" parent="AttributeDefinition" p:name="frequency"
          p:forceUppercase="true" p:label="Billing Frequency Code" p:shortLabel="Code" p:maxLength="10"
          p:validationPattern-ref="AnyCharacterValidation" p:required="true">
        <property name="control">
            <bean parent="TextControlDefinition" p:size="12"/>
        </property>
    </bean>

    <bean id="BillingFrequency-frequencyDescription" parent="BillingFrequency-frequencyDescription-parentBean"/>
    <bean id="BillingFrequency-frequencyDescription-parentBean" abstract="true" parent="AttributeDefinition"
          p:name="frequencyDescription" p:forceUppercase="false" p:label="Billing Frequency Description"
          p:shortLabel="Description" p:maxLength="45" p:validationPattern-ref="AnyCharacterWithWhitespaceValidation"
          p:required="true">
        <property name="control">
            <bean parent="TextControlDefinition" p:size="47"/>
        </property>
    </bean>

    <bean id="BillingFrequency-gracePeriodDays" parent="BillingFrequency-gracePeriodDays-parentBean"/>
    <bean id="BillingFrequency-gracePeriodDays-parentBean" abstract="true" parent="AttributeDefinition"
          p:name="gracePeriodDays" p:label="Grace Period Days" p:shortLabel="Grace Period" p:maxLength="3"
          p:required="true" p:validationPattern-ref="NumericValidation" p:type="INTEGER">
        <property name="control">
            <bean parent="TextControlDefinition" p:size="5"/>
        </property>
    </bean>

    <bean id="BillingFrequency-active" parent="BillingFrequency-active-parentBean"/>
    <bean id="BillingFrequency-active-parentBean" abstract="true" parent="GenericAttributes-activeIndicator"
          p:name="active"/>

    <!-- Business Object Inquiry Definition -->

    <bean id="BillingFrequency-inquiryDefinition" parent="BillingFrequency-inquiryDefinition-parentBean"/>
    <bean id="BillingFrequency-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition"
          p:title="Billing Frequency Inquiry">
        <property name="inquirySections">
            <list>
                <ref bean="BillingFrequency-inquirySectionDefinition"/>
            </list>
        </property>
    </bean>

    <bean id="BillingFrequency-inquirySectionDefinition"
          parent="BillingFrequency-inquirySectionDefinition-parentBean"/>
    <bean id="BillingFrequency-inquirySectionDefinition-parentBean" parent="InquirySectionDefinition" abstract="true"
          p:title="" p:numberOfColumns="1">
        <property name="inquiryFields">
            <list>
                <bean parent="FieldDefinition" p:attributeName="frequency"/>
                <bean parent="FieldDefinition" p:attributeName="frequencyDescription"/>
                <bean parent="FieldDefinition" p:attributeName="gracePeriodDays"/>
                <bean parent="FieldDefinition" p:attributeName="active"/>
            </list>
        </property>
    </bean>

    <!-- Business Object Lookup Definition -->

    <bean id="BillingFrequency-lookupDefinition" parent="BillingFrequency-lookupDefinition-parentBean"/>
    <bean id="BillingFrequency-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition"
          p:title="Billing Frequency Lookup" p:lookupSearchService-ref="defaultLookupSearchService">
        <property name="lookupAttributeDefinitions">
            <list>
                <bean class="org.kuali.kfs.krad.datadictionary.LookupAttributeDefinition"
                      parent="BillingFrequency-frequency"/>
                <bean class="org.kuali.kfs.krad.datadictionary.LookupAttributeDefinition"
                      parent="BillingFrequency-frequencyDescription"/>
                <bean class="org.kuali.kfs.krad.datadictionary.LookupAttributeDefinition"
                      parent="BillingFrequency-active"
                      p:control-ref="GenericAttributes-genericBooleanYNBoth-lookupControl" p:defaultValue="Y"/>
            </list>
        </property>
        <property name="lookupResultAttributeDefinitions">
            <list>
                <bean class="org.kuali.kfs.krad.datadictionary.LookupResultAttributeDefinition"
                      parent="BillingFrequency-frequency"/>
                <bean class="org.kuali.kfs.krad.datadictionary.LookupResultAttributeDefinition"
                      parent="BillingFrequency-frequencyDescription"/>
                <bean class="org.kuali.kfs.krad.datadictionary.LookupResultAttributeDefinition"
                      parent="BillingFrequency-gracePeriodDays"/>
                <bean class="org.kuali.kfs.krad.datadictionary.LookupResultAttributeDefinition"
                      parent="BillingFrequency-active"/>
            </list>
        </property>
        <property name="lookupFields">
            <list>
                <bean parent="FieldDefinition" p:attributeName="frequency"/>
                <bean parent="FieldDefinition" p:attributeName="frequencyDescription"/>
                <bean parent="FieldDefinition" p:attributeName="active"/>
            </list>
        </property>
        <property name="resultFields">
            <list>
                <bean parent="FieldDefinition" p:attributeName="frequency"/>
                <bean parent="FieldDefinition" p:attributeName="frequencyDescription"/>
                <bean parent="FieldDefinition" p:attributeName="gracePeriodDays"/>
                <bean parent="FieldDefinition" p:attributeName="active"/>
            </list>
        </property>
    </bean>
</beans>
