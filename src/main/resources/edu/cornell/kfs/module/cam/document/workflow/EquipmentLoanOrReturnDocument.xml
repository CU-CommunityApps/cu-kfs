<data xmlns="ns:workflow"
      xsi:schemaLocation="ns:workflow resource:WorkflowData"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <documentTypes xmlns="ns:workflow/DocumentType"
                   xsi:schemaLocation="ns:workflow/DocumentType resource:DocumentType">
        <documentType>
            <name>
                ELR
            </name>
            <parent>
                CAM
            </parent>
            <label>
                Equipment Loan/Return
            </label>
            <docHandler>
                ${application.url}/camsEquipmentLoanOrReturn.do?methodToCall=docHandler
            </docHandler>
            <helpDefinitionURL>
                default.htm?turl=WordDocuments%2Fequipmentloan.htm
            </helpDefinitionURL>
            <active>
                true
            </active>
            <routingVersion>
                2
            </routingVersion>
            <routePaths>
                <routePath>
                    <start name="AdHoc" nextNode="Account"/>
                    <role name="Account" nextNode="OrganizationHierarchy"/>
                    <role name="OrganizationHierarchy" nextNode="BorrowerActive"/>
                    <split name="BorrowerActive">
                        <branch name="True">
                            <role name="Borrower" nextNode="Join"/>
                        </branch>
                        <branch name="False">
                            <simple name="NoOp" nextNode="Join"/>
                        </branch>
                        <join name="Join"/>
                    </split>
                </routePath>
            </routePaths>
            <routeNodes>
                <start name="AdHoc"/>
                <role name="Account">
                    <qualifierResolverClass>
                        org.kuali.kfs.krad.workflow.attribute.DataDictionaryQualifierResolver
                    </qualifierResolverClass>
                </role>
                <role name="OrganizationHierarchy">
                    <qualifierResolverClass>
                        org.kuali.kfs.krad.workflow.attribute.DataDictionaryQualifierResolver
                    </qualifierResolverClass>
                </role>
                <split name="BorrowerActive">
                    <type>org.kuali.kfs.sys.document.workflow.SimpleBooleanSplitNode</type>
                </split>
                <role name="Borrower">
                    <qualifierResolverClass>
                        org.kuali.kfs.krad.workflow.attribute.DataDictionaryQualifierResolver
                    </qualifierResolverClass>
                </role>
                <join name="Join"/>
                <simple name="NoOp">
                    <type>org.kuali.kfs.kew.engine.node.NoOpNode</type>
                </simple>
            </routeNodes>
        </documentType>
    </documentTypes>
</data>
