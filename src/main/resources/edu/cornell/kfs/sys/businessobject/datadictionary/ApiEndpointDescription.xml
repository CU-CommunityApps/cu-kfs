<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p" xsi:schemaLocation=" http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="ApiEndpointDescription" parent="ApiEndpointDescription-parentBean"/>

    <bean id="ApiEndpointDescription-parentBean" abstract="true" parent="BusinessObjectEntry">
        <property name="businessObjectClass" value="edu.cornell.kfs.sys.businessobject.ApiEndpointDescription"/>
        <property name="objectLabel" value="API Endpoint Description"/>
        <property name="titleAttribute" value="endpointCode"/>

        <property name="inquiryDefinition">
            <ref bean="ApiEndpointDescription-inquiryDefinition"/>
        </property>
        <property name="lookupDefinition">
            <ref bean="ApiEndpointDescription-lookupDefinition"/>
        </property>
        <property name="attributes">
            <list>
                <ref bean="ApiEndpointDescription-endpointCode"/>
                <ref bean="ApiEndpointDescription-endpointDescription"/>
                <ref bean="ApiEndpointDescription-active"/>
            </list>
        </property>
        <property name="collections">
            <list>
                <bean parent="CollectionDefinition" p:name="authenticationMappings" p:label="Authentication Mappings" p:shortLabel="Authentication Mappings" p:summary="Authentication Mappings" p:elementLabel="Authentication Mapping"/>
            </list>
        </property>
    </bean>

    <bean id="ApiEndpointDescription-endpointCode" parent="ApiEndpointDescription-endpointCode-parentBean"/>

    <bean id="ApiEndpointDescription-endpointCode-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="name" value="endpointCode"/>
        <property name="label" value="Endpoint Code"/>
        <property name="shortLabel" value="Code"/>
        <property name="maxLength" value="30"/>
        <property name="control">
            <bean parent="TextControlDefinition" p:size="35"/>
        </property>
        <property name="validationPattern" >
            <bean parent="AnyCharacterWithWhitespaceValidation" />
        </property>
        <property name="attributeSecurity">
            <bean parent="AttributeSecurity" p:readOnly="false"/>
        </property>
    </bean>

    <bean id="ApiEndpointDescription-endpointDescription" parent="ApiEndpointDescription-endpointDescription-parentBean"/>

    <bean id="ApiEndpointDescription-endpointDescription-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="name" value="endpointDescription"/>
        <property name="label" value="Endpoint Description"/>
        <property name="shortLabel" value="Description"/>
        <property name="maxLength" value="100"/>
        <property name="control">
            <bean parent="TextControlDefinition" p:size="105"/>
        </property>
        <property name="validationPattern" >
            <bean parent="AnyCharacterWithWhitespaceValidation" />
        </property>
        <property name="attributeSecurity">
            <bean parent="AttributeSecurity" p:readOnly="false"/>
        </property>
    </bean>

    <bean id="ApiEndpointDescription-active" parent="ApiEndpointDescription-active-parentBean"/>
    <bean id="ApiEndpointDescription-active-parentBean" abstract="true" parent="GenericAttributes-activeIndicator">
        <property name="name" value="active"/>
    </bean>

    <bean id="ApiEndpointDescription-inquiryDefinition" parent="ApiEndpointDescription-inquiryDefinition-parentBean"/>

    <bean id="ApiEndpointDescription-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
        <property name="title" value="API Endpoint Description Inquiry"/>
        <property name="inquirySections">
            <list>
                <bean parent="InquirySectionDefinition">
                    <property name="title" value="API Endpoint Description Inquiry"/>
                    <property name="numberOfColumns" value="1"/>
                    <property name="inquiryFields">
                        <list>
                            <bean parent="FieldDefinition" p:attributeName="endpointCode"/>
                            <bean parent="FieldDefinition" p:attributeName="endpointDescription"/>
                            <bean parent="FieldDefinition" p:attributeName="active"/>
                        </list>
                    </property>
                </bean>
                <bean parent="InquirySectionDefinition">
                    <property name="title" value="Description Authenticators"/>
                    <property name="numberOfColumns" value="1"/>
                    <property name="inquiryFields">
                        <list>
                            <bean parent="InquiryCollectionDefinition">
                                <property name="attributeName" value="authenticationMappings"/>
                                <property name="businessObjectClass" value="edu.cornell.kfs.sys.businessobject.ApiEndpointAuthenticator"/>
                                <property name="numberOfColumns" value="1"/>
                                <property name="inquiryFields">
                                    <list>
                                        <bean parent="FieldDefinition" p:attributeName="authenticatorId"/>
                                        <bean parent="FieldDefinition" p:attributeName="active"/>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="ApiEndpointDescription-lookupDefinition" parent="ApiEndpointDescription-lookupDefinition-parentBean"/>

    <bean id="ApiEndpointDescription-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
        <property name="title" value="API Endpoint Description Lookup"/>

        <property name="defaultSort" >
            <bean parent="SortDefinition">
                <property name="attributeNames">
                    <list>
                        <value>endpointCode</value>
                    </list>
                </property>
            </bean>
        </property>
        <property name="lookupFields">
            <list>
                <bean parent="FieldDefinition" p:attributeName="endpointCode"/>
                <bean parent="FieldDefinition" p:attributeName="endpointDescription"/>
                <bean parent="FieldDefinition" p:attributeName="active"/>
            </list>
        </property>
        <property name="resultFields">
            <list>
                <bean parent="FieldDefinition" p:attributeName="endpointCode"/>
                <bean parent="FieldDefinition" p:attributeName="endpointDescription"/>
                <bean parent="FieldDefinition" p:attributeName="active"/>
            </list>
        </property>
    </bean>

</beans>
