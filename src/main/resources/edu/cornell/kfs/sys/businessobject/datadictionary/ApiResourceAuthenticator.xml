<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p" xsi:schemaLocation=" http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="ApiResourceAuthenticator" parent="ApiResourceAuthenticator-parentBean"/>

    <bean id="ApiResourceAuthenticator-parentBean" abstract="true" parent="BusinessObjectEntry">
        <property name="businessObjectClass" value="edu.cornell.kfs.sys.businessobject.ApiResourceAuthenticator"/>
        <property name="objectLabel" value="API Resource Authenticator"/>
        <property name="titleAttribute" value="authenticatorId"/>

        <property name="inquiryDefinition">
            <ref bean="ApiResourceAuthenticator-inquiryDefinition"/>
        </property>
        <property name="lookupDefinition">
            <ref bean="ApiResourceAuthenticator-lookupDefinition"/>
        </property>
        <property name="attributes">
            <list>
                <ref bean="ApiResourceAuthenticator-authenticatorId"/>
                <ref bean="ApiResourceAuthenticator-authenticatorDescription"/>
                <ref bean="ApiResourceAuthenticator-usernamePassword"/>
                <ref bean="ApiResourceAuthenticator-active"/>
            </list>
        </property>
    </bean>

    <bean id="ApiResourceAuthenticator-authenticatorId" parent="ApiResourceAuthenticator-authenticatorId-parentBean"/>

    <bean id="ApiResourceAuthenticator-authenticatorId-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="name" value="authenticatorId"/>
        <property name="forceUppercase" value="false"/>
        <property name="label" value="Authenticator ID"/>
        <property name="shortLabel" value="ID"/>
        <property name="maxLength" value="10"/>
        <property name="control">
            <bean parent="TextControlDefinition" p:size="12"/>
        </property>
        <property name="validationPattern" >
            <bean parent="NumericValidationPattern" />
        </property>
        <property name="attributeSecurity">
            <bean parent="AttributeSecurity" p:readOnly="false"/>
        </property>
    </bean>

    <bean id="ApiResourceAuthenticator-authenticatorDescription" parent="ApiResourceAuthenticator-authenticatorDescription-parentBean"/>

    <bean id="ApiResourceAuthenticator-authenticatorDescription-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="name" value="authenticatorDescription"/>
        <property name="forceUppercase" value="false"/>
        <property name="label" value="Authenticator Description"/>
        <property name="shortLabel" value="Description"/>
        <property name="maxLength" value="100"/>
        <property name="control">
            <bean parent="TextControlDefinition" p:size="50"/>
        </property>
        <property name="validationPattern" >
            <bean parent="AnyCharacterValidationPattern" />
        </property>
        <property name="attributeSecurity">
            <bean parent="AttributeSecurity" p:readOnly="false"/>
        </property>
    </bean>

    <bean id="ApiResourceAuthenticator-usernamePassword" parent="ApiResourceAuthenticator-usernamePassword-parentBean"/>

    <bean id="ApiResourceAuthenticator-usernamePassword-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="name" value="usernamePassword"/>
        <property name="forceUppercase" value="false"/>
        <property name="label" value="Username Password"/>
        <property name="shortLabel" value="Username Password"/>
        <property name="maxLength" value="350"/>
        <property name="control">
            <bean parent="TextControlDefinition" p:size="150"/>
        </property>
        <property name="validationPattern" >
            <bean parent="AnyCharacterValidationPattern" />
        </property>
        <property name="attributeSecurity">
            <bean parent="AttributeSecurity">
                <property name="mask" value="true"/>
                <property name="maskFormatter">
                    <bean parent="MaskFormatterLiteral" p:literal="*****************"/>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="ApiResourceAuthenticator-active" parent="ApiResourceAuthenticator-active-parentBean"/>
    <bean id="ApiResourceAuthenticator-active-parentBean" abstract="true" parent="GenericAttributes-activeIndicator">
        <property name="name" value="active"/>
    </bean>

    <bean id="ApiResourceAuthenticator-inquiryDefinition" parent="ApiResourceAuthenticator-inquiryDefinition-parentBean"/>

    <bean id="ApiResourceAuthenticator-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
        <property name="title" value="API Resource Authenticator Inquiry"/>
        <property name="inquirySections">
            <list>
                <bean parent="InquirySectionDefinition">
                    <property name="title" value="API Resource Authenticator Inquiry"/>
                    <property name="numberOfColumns" value="1"/>
                    <property name="inquiryFields">
                        <list>
                            <bean parent="FieldDefinition" p:attributeName="authenticatorId"/>
                            <bean parent="FieldDefinition" p:attributeName="authenticatorDescription"/>
                            <bean parent="FieldDefinition" p:attributeName="active"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="ApiResourceAuthenticator-lookupDefinition" parent="ApiResourceAuthenticator-lookupDefinition-parentBean"/>

    <bean id="ApiResourceAuthenticator-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
        <property name="title" value="API Resource Authenticator Lookup"/>

        <property name="defaultSort" >
            <bean parent="SortDefinition">
                <property name="attributeNames">
                    <list>
                        <value>authenticatorId</value>
                    </list>
                </property>
            </bean>
        </property>
        <property name="lookupFields">
            <list>
                <bean parent="FieldDefinition" p:attributeName="authenticatorId"/>
                <bean parent="FieldDefinition" p:attributeName="authenticatorDescription"/>
                <bean parent="FieldDefinition" p:attributeName="active"/>
            </list>
        </property>
        <property name="resultFields">
            <list>
                <bean parent="FieldDefinition" p:attributeName="authenticatorId"/>
                <bean parent="FieldDefinition" p:attributeName="authenticatorDescription"/>
                <bean parent="FieldDefinition" p:attributeName="active"/>
            </list>
        </property>
    </bean>

</beans>
