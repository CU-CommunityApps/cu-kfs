<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p" xsi:schemaLocation="http://www.springframework.org/schema/beans         http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="ApiResourceDescriptionMaintenanceDocument" parent="ApiResourceDescriptionMaintenanceDocument-parentBean"/>

    <bean id="ApiResourceDescriptionMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
        <property name="businessObjectClass" value="edu.cornell.kfs.sys.businessobject.ApiResourceDescription"/>
        <property name="maintainableClass" value="org.kuali.kfs.sys.document.FinancialSystemMaintainable"/>
        <property name="allowsNewOrCopy" value="true"/>
        <property name="maintainableSections">
            <list>
                <ref bean="ApiResourceDescriptionMaintenanceDocument-ApiResourceDescription"/>
            </list>
        </property>
        <property name="documentTypeName" value="APIRD"/>
        <!--
        <property name="documentAuthorizerClass" value="org.kuali.kfs.sys.document.authorization.FinancialSystemMaintenanceDocumentAuthorizerBase"/>
        <property name="documentPresentationControllerClass" value="org.kuali.kfs.sys.document.authorization.FinancialSystemMaintenanceDocumentPresentationControllerBase"/>
        -->
        <property name="workflowAttributes">
            <ref bean="ApiResourceDescriptionMaintenanceDocument-workflowAttributes"/>
        </property>
    </bean>

    <bean id="ApiResourceDescriptionMaintenanceDocument-ApiResourceDescription" parent="ApiResourceDescriptionMaintenanceDocument-ApiResourceDescription-parentBean"/>
    <bean id="ApiResourceDescriptionMaintenanceDocument-ApiResourceDescription-parentBean" abstract="true" parent="MaintainableSectionDefinition">
        <property name="defaultOpen" value="true"/>
        <property name="id" value="API Resource Description"/>
        <property name="title" value="API Resource Description"/>
        <property name="maintainableItems">
            <list>
                <bean parent="MaintainableFieldDefinition" p:name="resourceCode" p:required="true"/>
                <bean parent="MaintainableFieldDefinition" p:name="resourceDescription" p:required="true"/>
                <bean parent="MaintainableFieldDefinition" p:name="active" p:required="true" p:defaultValue="true"/>
            </list>
        </property>
    </bean>

    <bean id="ApiResourceDescriptionMaintenanceDocument-workflowAttributes" parent="ApiResourceDescriptionMaintenanceDocument-workflowAttributes-parentBean"/>
    <bean id="ApiResourceDescriptionMaintenanceDocument-workflowAttributes-parentBean" class="org.kuali.kfs.krad.datadictionary.WorkflowAttributes" abstract="true"/>

</beans>
