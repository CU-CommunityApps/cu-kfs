    xsi:schemaLocation=" http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <import resource="classpath:org/kuali/kfs/sys/sys-lookup-beans.xml"/>
    <import resource="classpath:edu/cornell/kfs/sys/cu-sys-attribute-beans.xml"/>
    
    <bean id="AccountGlobalSearch" parent="AccountGlobalSearch-parent"/>
    <bean id="AccountGlobalSearch-parent" abstract="true" parent="Account"
          p:actionsProvider-ref="businessObjectActionsProvider"
          p:businessObjectClass="edu.cornell.kfs.coa.businessobject.AccountGlobalSearch"
          p:businessObjectAdminService-ref="defaultBoAdminService"
          p:searchService-ref="defaultSearchService"
          p:lookupDefinition-ref="AccountGlobalSearch-lookupDefinition">
        <property name="attributes">
            <list merge="true">
                <ref bean="AccountGlobalSearch-useOrgHierarchy"/>
            </list>
        </property>
    </bean>
  
    <!-- Attribute Definitions -->
       
    <bean id="AccountGlobalSearch-useOrgHierarchy" parent="AccountGlobalSearch-useOrgHierarchy-parentBean"/>
    <bean id="AccountGlobalSearch-useOrgHierarchy-parentBean" abstract="true" parent="GenericAttributes-genericBoolean"
          p:control-ref="GenericAttributes-genericBooleanYNBoth-lookupControl"
          p:name="useOrgHierarchy"
          p:label="Search by Organization Hierarchy"
          p:shortLabel="useOrgHierarchy"
          p:required="false"
          p:defaultValue="N"
          p:formatterClass="org.kuali.kfs.core.web.format.BooleanFormatter">
    </bean>
    
    <!-- Business Object Lookup Definition -->
  
    <bean id="AccountGlobalSearch-lookupDefinition" parent="Account-lookupDefinition"
          p:title="Account Global Lookup"
          p:lookupableID="accountGlobalLookupable"
          p:multipleValuesResultSetLimit="1000">
      <property name="formAttributeDefinitions">
            <list>
                <ref bean="Account-chartOfAccountsCode"/>
                <ref bean="Account-accountNumber"/>
                <ref bean="Account-accountName"/>
                <ref bean="Account-organizationCode"/>
                <ref bean="AccountGlobalSearch-useOrgHierarchy"/>
                <ref bean="Account-accountTypeCode"/>
                <ref bean="Account-subFundGroupCode"/>
                <ref bean="Account-extension-majorReportingCategoryCode"/>
                <ref bean="Account-extension-programCode"/>
                <ref bean="Account-extension-appropriationAccountNumber"/>
                <ref bean="Account-accountFiscalOfficerUser.principalName"/>
                <ref bean="Account-accountManagerUser.principalName"/>
                <ref bean="Account-accountSupervisoryUser.principalName"/>
                <ref bean="Account-closed"/>
            </list>
        </property>
        <property name="displayAttributeDefinitions">
            <list>
                <ref bean="Account-chartOfAccountsCode"/>
                <ref bean="Account-accountNumber"/>
                <ref bean="Account-accountName"/>
                <ref bean="Account-organizationCode"/>
                <ref bean="Account-accountTypeCode"/>
                <ref bean="Account-subFundGroupCode"/>
                <ref bean="Account-extension-majorReportingCategoryCode"/>
                <ref bean="Account-extension-programCode"/>
                <ref bean="Account-extension-appropriationAccountNumber"/>
                <ref bean="Account-accountFiscalOfficerUser.name"/>
                <ref bean="Account-accountManagerUser.principalName"/>
                <ref bean="Account-accountSupervisoryUser.principalName"/>
                <ref bean="Account-closed"/>
                <ref bean="Account-accountCreateDate"/>
                <ref bean="Account-accountExpirationDate"/>
            </list>
        </property>
