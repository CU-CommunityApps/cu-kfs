<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="SufficientFundsCode" parent="SufficientFundsCode-parentBean"/>
    <bean id="SufficientFundsCode-parentBean" abstract="true" parent="BusinessObjectEntry"
          p:businessObjectClass="org.kuali.kfs.coa.businessobject.SufficientFundsCode"
          p:inquiryDefinition-ref="SufficientFundsCode-inquiryDefinition"
          p:businessObjectAdminService-ref="defaultBoAdminService" p:name="SufficientFundsCode"
          p:lookupDefinition-ref="SufficientFundsCode-lookupDefinition" p:titleAttribute="code"
          p:objectLabel="Sufficient Funds Code">
        <property name="attributes">
            <list>
                <ref bean="SufficientFundsCode-code"/>
                <ref bean="SufficientFundsCode-name"/>
                <ref bean="SufficientFundsCode-active"/>
            </list>
        </property>
    </bean>

    <!-- Attribute Definitions -->

    <bean id="SufficientFundsCode-code" parent="SufficientFundsCode-code-parentBean"/>
    <bean id="SufficientFundsCode-code-parentBean" abstract="true" parent="AttributeDefinition" p:name="code"
          p:forceUppercase="true" p:label="Account Sufficient Funds Code" p:shortLabel="Code" p:maxLength="1"
          p:validationPattern-ref="AnyCharacterValidation">
        <property name="control">
            <bean parent="TextControlDefinition" p:size="3"/>
        </property>
    </bean>

    <bean id="SufficientFundsCode-name" parent="SufficientFundsCode-name-parentBean"/>
    <bean id="SufficientFundsCode-name-parentBean" abstract="true" parent="AttributeDefinition" p:name="name"
          p:label="Account Sufficient Funds Name" p:shortLabel="Name" p:maxLength="40"
          p:validationPattern-ref="AnyCharacterWithWhitespaceValidation">
        <property name="control">
            <bean parent="TextControlDefinition" p:size="42"/>
        </property>
    </bean>

    <bean id="SufficientFundsCode-active" parent="SufficientFundsCode-active-parentBean"/>
    <bean id="SufficientFundsCode-active-parentBean" abstract="true" parent="GenericAttributes-activeIndicator"
          p:name="active"/>

    <!-- Business Object Inquiry Definition -->

    <bean id="SufficientFundsCode-inquiryDefinition" parent="SufficientFundsCode-inquiryDefinition-parentBean"/>
    <bean id="SufficientFundsCode-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition"
          p:title="Sufficient Funds Code Inquiry">
        <property name="inquirySections">
            <list>
                <ref bean="SufficientFundsCode-inquirySectionDefinition"/>
            </list>
        </property>
    </bean>

    <bean id="SufficientFundsCode-inquirySectionDefinition"
          parent="SufficientFundsCode-inquirySectionDefinition-parentBean"/>
    <bean id="SufficientFundsCode-inquirySectionDefinition-parentBean" parent="InquirySectionDefinition"
          abstract="true" p:title="" p:numberOfColumns="1">
        <property name="inquiryFields">
            <list>
                <bean parent="FieldDefinition" p:attributeName="code"/>
                <bean parent="FieldDefinition" p:attributeName="name"/>
                <bean parent="FieldDefinition" p:attributeName="active"/>
            </list>
        </property>
    </bean>

    <!-- Business Object Lookup Definition -->

    <bean id="SufficientFundsCode-lookupDefinition" parent="SufficientFundsCode-lookupDefinition-parentBean"/>
    <bean id="SufficientFundsCode-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition"
          p:title="Sufficient Funds Code Lookup" p:lookupSearchService-ref="defaultLookupSearchService">
        <property name="defaultSort">
            <bean parent="SortDefinition">
                <property name="attributeNames">
                    <list>
                        <value>code</value>
                    </list>
                </property>
            </bean>
        </property>
        <property name="lookupAttributeDefinitions">
            <list>
                <bean class="org.kuali.kfs.krad.datadictionary.LookupAttributeDefinition"
                      parent="SufficientFundsCode-code"/>
                <bean class="org.kuali.kfs.krad.datadictionary.LookupAttributeDefinition"
                      parent="SufficientFundsCode-name"/>
                <bean class="org.kuali.kfs.krad.datadictionary.LookupAttributeDefinition"
                      parent="SufficientFundsCode-active"
                      p:control-ref="GenericAttributes-genericBooleanYNBoth-lookupControl" p:defaultValue="Y"/>
            </list>
        </property>
        <property name="lookupResultAttributeDefinitions">
            <list>
                <bean class="org.kuali.kfs.krad.datadictionary.LookupResultAttributeDefinition"
                      parent="SufficientFundsCode-code"/>
                <bean class="org.kuali.kfs.krad.datadictionary.LookupResultAttributeDefinition"
                      parent="SufficientFundsCode-name"/>
                <bean class="org.kuali.kfs.krad.datadictionary.LookupResultAttributeDefinition"
                      parent="SufficientFundsCode-active"/>
            </list>
        </property>
        <property name="lookupFields">
            <list>
                <bean parent="FieldDefinition" p:attributeName="code"/>
                <bean parent="FieldDefinition" p:attributeName="name"/>
                <bean parent="FieldDefinition" p:attributeName="active"/>
            </list>
        </property>
        <property name="resultFields">
            <list>
                <bean parent="FieldDefinition" p:attributeName="code"/>
                <bean parent="FieldDefinition" p:attributeName="name"/>
                <bean parent="FieldDefinition" p:attributeName="active"/>
            </list>
        </property>
    </bean>
</beans>
