<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="concurModuleConfiguration" parent="concurModuleConfiguration-parentBean" />
	<bean id="concurModuleConfiguration-parentBean" class="org.kuali.kfs.sys.FinancialSystemModuleConfiguration"
		abstract="true">
		<property name="namespaceCode" value="KFS-CNCR" />
		<property name="initializeDataDictionary" value="false" />
		<property name="packagePrefixes">
			<list>
				<value>edu.cornell.kfs.concur</value>
			</list>
		</property>
		<property name="databaseRepositoryFilePaths">
			<list merge="true">
				<value>edu/cornell/kfs/concur/cu-ojb-concur.xml</value>
			</list>
		</property>
		<property name="jobNames">
			<list>
				<value>concurEventNotificationProcessingBatchJob</value>
			</list>
		</property>
		<property name="batchFileDirectories">
			<list>
				<value>${reports.directory}/concur</value>
			</list>
		</property>

	</bean>

	<bean id="concurModuleService" parent="concurModuleService-parent" />

	<bean id="concurModuleService-parent" abstract="true"
		class="org.kuali.kfs.sys.service.impl.KfsModuleServiceImpl">
		<property name="moduleConfiguration" ref="concurModuleConfiguration" />
	</bean>
	
	<bean id="concurEventNotificationProcessingBatchJob" parent="unscheduledJobDescriptor">
		<property name="steps">
			<list>
				<ref bean="concurEventNotificationProcessingStep" />
			</list>
		</property>
	</bean>

	<bean id="concurEventNotificationProcessingStep" parent="step" class="edu.cornell.kfs.concur.batch.ConcurEventNotificationProcessingStep">
		<property name="concurEventNotificationProcessingService" ref="concurEventNotificationProcessingService" />
		<property name="concurAccessTokenService" ref="concurAccessTokenService" />
	</bean>
	
	<bean id="concurEventNotificationProcessingService" parent="concurEventNotificationProcessingService-parentBean" />
	<bean id="concurEventNotificationProcessingService-parentBean" class="edu.cornell.kfs.concur.batch.service.impl.ConcurEventNotificationProcessingServiceImpl" abstract="true">
	    <property name="concurAccountValidationService" ref="concurAccountValidationService"/>
	    <property name="concurEventNotificationService" ref="concurEventNotificationService"/>
	    <property name="concurReportsService" ref="concurReportsService"/>
	    <property name="configurationService" ref="configurationService" />
	</bean>

	<bean id="concurAuthenticationService" parent="concurAuthenticationService-parentBean" />
	<bean id="concurAuthenticationService-parentBean" class="edu.cornell.kfs.concur.service.impl.ConcurAuthenticationServiceImpl" abstract="true">
		<property name="concurToken">
			<value>${concur.authorization.token}</value>
		</property>
	</bean>
	
	<bean id="concurEventNotificationService" parent="concurEventNotificationService-parentBean" />
	<bean id="concurEventNotificationService-parentBean" class="edu.cornell.kfs.concur.service.impl.ConcurEventNotificationServiceImpl" abstract="true">
		<property name="businessObjectService" ref="businessObjectService"/>
	</bean>
	
	<bean id="concurAccountValidationService" parent="concurAccountValidationService-parentBean" />
	<bean id="concurAccountValidationService-parentBean" class="edu.cornell.kfs.concur.service.impl.ConcurAccountValidationServiceImpl" abstract="true">
		<property name="accountService" ref="accountService" />
		<property name="objectCodeService" ref="objectCodeService" />
		<property name="subAccountService" ref="subAccountService" />
		<property name="subObjectCodeService" ref="subObjectCodeService" />
		<property name="projectCodeService" ref="projectCodeService" />
		<property name="configurationService" ref="configurationService" />
	</bean>
	
	<bean id="concurEventNotificationConversionService" parent="concurEventNotificationConversionService-parentBean" />
	<bean id="concurEventNotificationConversionService-parentBean" class="edu.cornell.kfs.concur.service.impl.ConcurEventNotificationConversionServiceImpl" abstract="true">
		<property name="dateTimeService" ref="dateTimeService" />
	</bean>
    
    <bean id="concurReportsService" parent="concurReportsService-parentBean" />
	<bean id="concurReportsService-parentBean" class="edu.cornell.kfs.concur.service.impl.ConcurReportsServiceImpl" abstract="true">
		<property name="concurAccessTokenService" ref="concurAccessTokenService" />
		<property name="parameterService" ref="parameterService" />
	</bean>
	
	<bean id="concurAccessTokenService" parent="concurAccessTokenService-parentBean" />
	<bean id="concurAccessTokenService-parentBean" class="edu.cornell.kfs.concur.service.impl.ConcurAccessTokenServiceImpl" abstract="true">
		<property name="concurRefreshAccessTokenURL">
			<value>${concur.refresh.access.token.url}</value>
		</property>
		<property name="webServiceCredentialService" ref="webServiceCredentialService"/>
	</bean>
</beans>