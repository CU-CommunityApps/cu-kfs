<!--Cornell Customization: backport redis-->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:cache="http://www.springframework.org/schema/cache"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
               http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
               http://www.springframework.org/schema/cache
               http://www.springframework.org/schema/cache/spring-cache.xsd"
       default-lazy-init="false">

    <!-- spring service that should be exposed on the ksb to receive messages from the distributed cache manager -->
    <bean id="cacheManager" class="org.springframework.cache.ehcache.EhCacheCacheManager">
        <property name="cacheManager">
            <bean class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean"
                  p:configLocation="${kfs.ehcache.config.location}"/>
        </property>
    </bean>

    <!-- the distributed cache manager that calls into the CacheAdminService on the ksb -->
    <bean id="cacheManagerRegistry"
          class="org.kuali.kfs.core.impl.cache.CacheManagerRegistryImpl"
          p:cacheManager-ref="cacheManager"
    />

    <bean id="globalCacheManager" class="org.kuali.kfs.core.impl.cache.GlobalCacheManager"
          p:cacheManagerRegistry-ref="cacheManagerRegistry"/>

    <cache:annotation-driven cache-manager="globalCacheManager"/>
</beans>
