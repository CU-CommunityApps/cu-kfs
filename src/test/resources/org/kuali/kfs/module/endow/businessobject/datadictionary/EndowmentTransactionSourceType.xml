<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:dd="http://rice.kuali.org/dd"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
http://rice.kuali.org/dd http://rice.kuali.org/dd/dd.xsd">

	<bean id="EndowmentTransactionSourceType" parent="EndowmentTransactionSourceType-parentBean" />

	<bean id="EndowmentTransactionSourceType-parentBean" abstract="true"
		parent="BusinessObjectEntry">
		<property name="businessObjectClass"
			value="org.kuali.kfs.module.endow.businessobject.EndowmentTransactionSourceType" />
		<property name="inquiryDefinition">
			<ref bean="EndowmentTransactionSourceType-inquiryDefinition" />
		</property>
		<property name="lookupDefinition">
			<ref bean="EndowmentTransactionSourceType-lookupDefinition" />
		</property>
		<property name="objectLabel" value="Endowment Transaction Source Type" />
		<property name="attributes">
			<list>
				<ref bean="EndowmentTransactionSourceType-code" />
				<ref bean="EndowmentTransactionSourceType-name" />
			</list>
		</property>
	</bean>

	<!-- Attribute Definitions -->


	<bean id="EndowmentTransactionSourceType-code" parent="EndowmentTransactionSourceType-code-parentBean" />

	<bean id="EndowmentTransactionSourceType-code-parentBean"
		abstract="true" parent="AttributeDefinition">
		<property name="name" value="code" />
		<property name="forceUppercase" value="true" />
		<property name="label" value="Transaction Source" />
		<property name="shortLabel" value="Transaction Source" />
		<property name="maxLength" value="1" />
		<property name="required" value="true" />
		<property name="control">
			<bean parent="TextControlDefinition" p:size="1" />
		</property>
	</bean>

	<bean id="EndowmentTransactionSourceType-name" parent="EndowmentTransactionSourceType-name-parentBean" />

	<bean id="EndowmentTransactionSourceType-name-parentBean"
		abstract="true" parent="AttributeDefinition">
		<property name="name" value="name" />
		<property name="label" value="Transaction Source Description" />
		<property name="shortLabel" value="Transaction Source Description" />
		<property name="maxLength" value="40" />
		<property name="required" value="true" />
		<property name="control">
			<bean parent="TextControlDefinition" p:size="40" />
		</property>
	</bean>

	<!-- Business Object Inquiry Definition -->


	<bean id="EndowmentTransactionSourceType-inquiryDefinition"
		parent="EndowmentTransactionSourceType-inquiryDefinition-parentBean" />

	<bean id="EndowmentTransactionSourceType-inquiryDefinition-parentBean"
		abstract="true" parent="InquiryDefinition">
		<property name="title" value="Endowment Transaction Source Inquiry" />
		<property name="inquirySections">
			<list>
				<ref bean="EndowmentTransactionSourceType-inquirySectionDefinition" />
			</list>
		</property>
	</bean>
	<bean id="EndowmentTransactionSourceType-inquirySectionDefinition"
		parent="EndowmentTransactionSourceType-inquirySectionDefinition-parentBean" />
	<bean
		id="EndowmentTransactionSourceType-inquirySectionDefinition-parentBean"
		parent="InquirySectionDefinition" abstract="true">
		<property name="title" value="" />
		<property name="numberOfColumns" value="1" />
		<property name="inquiryFields">
			<list>
				<bean parent="FieldDefinition" p:attributeName="code" />
				<bean parent="FieldDefinition" p:attributeName="name" />

			</list>
		</property>
	</bean>
	<!-- Business Object Lookup Definition -->


	<bean id="EndowmentTransactionSourceType-lookupDefinition"
		parent="EndowmentTransactionSourceType-lookupDefinition-parentBean" />

	<bean id="EndowmentTransactionSourceType-lookupDefinition-parentBean"
		abstract="true" parent="LookupDefinition">
		<property name="title" value="Endowment Transaction Source Lookup" />

		<property name="defaultSort">
			<bean parent="SortDefinition">
				<property name="attributeNames">
					<list>
						<value>code</value>
					</list>
				</property>
			</bean>
		</property>
		<property name="lookupFields">
			<list>
				<bean parent="FieldDefinition" p:attributeName="code" />
				<bean parent="FieldDefinition" p:attributeName="name" />

			</list>
		</property>
		<property name="resultFields">
			<list>
				<bean parent="FieldDefinition" p:attributeName="code" />
				<bean parent="FieldDefinition" p:attributeName="name" />
			</list>
		</property>
	</bean>
</beans>

